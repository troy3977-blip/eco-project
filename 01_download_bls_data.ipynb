import pandas as pd
from pathlib import Path
import json

# --- FILE PATHS ---
FILE_UNEMP = "LNS14000000.csv"         # Unemployment rate
FILE_LFP   = "LNS11300000.csv"         # Labor force participation
FILE_NONFARM = "CES0000000001.csv"     # Total nonfarm payrolls
FILE_USREC = "USREC.csv"               # Recession indicator (NBER)

# --- LOAD CSVs ---
unemp = pd.read_csv(FILE_UNEMP)
lfp = pd.read_csv(FILE_LFP)
nonfarm = pd.read_csv(FILE_NONFARM)
usrec = pd.read_csv(FILE_USREC)

out_dir = Path("json_output")
out_dir.mkdir(exist_ok=True)

# Save pretty JSON (one file per dataset)
unemp.to_json(out_dir / "LNS14000000.json", orient="records", indent=2, date_format="iso")
lfp.to_json(out_dir / "LNS11300000.json", orient="records", indent=2, date_format="iso")
nonfarm.to_json(out_dir / "CES0000000001.json", orient="records", indent=2, date_format="iso")
usrec.to_json(out_dir / "USREC.json", orient="records", indent=2, date_format="iso")
